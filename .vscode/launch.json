{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "HC32F4A0xI Debug (PyOCD)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/hc32f4a0xi-template.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "pyocd",
            "targetId": "hc32f4a0xi",
            "interface": "swd",
            "preLaunchTask": "build",
            "svdFile": "${workspaceFolder}/drivers/HC32F4A0.svd",
            "showDevDebugOutput": "parsed",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "serverArgs": [
                "--frequency", "4m"
            ],
            "loadFiles": [
                "${workspaceFolder}/build/hc32f4a0xi-template.elf"
            ],
            "swoConfig": {
                "enabled": false,
                // "cpuFrequency": 240000000,
                // "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        },
        {
            "name": "HC32F4A0xI Debug (J-Link)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/hc32f4a0xi-template.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink",
            "device": "HC32F4A0xI",
            "interface": "swd",
            "preLaunchTask": "build",
            "svdFile": "${workspaceFolder}/drivers/HC32F4A0.svd",
            "showDevDebugOutput": "parsed",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "loadFiles": [
                "${workspaceFolder}/build/hc32f4a0xi-template.elf"
            ],
            "swoConfig": {
                "enabled": false,
                "cpuFrequency": 240000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        },
        {
            "name": "HC32F4A0xI Attach (PyOCD)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/hc32f4a0xi-template.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "pyocd",
            "targetId": "hc32f4a0xi",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/drivers/HC32F4A0.svd",
            "showDevDebugOutput": "parsed",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        },
        {
            "name": "HC32F4A0xI Attach (J-Link)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/hc32f4a0xi-template.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "HC32F4A0xI",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/drivers/HC32F4A0.svd",
            "showDevDebugOutput": "parsed",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        },
        {
            "name": "HC32F4A0xI Flash & Debug (PyOCD Flash, J-Link Debug)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/hc32f4a0xi-template.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink",
            "device": "Cortex-M4",
            "interface": "swd",
            "preLaunchTask": "flash_with_pyocd",
            "svdFile": "${workspaceFolder}/drivers/HC32F4A0.svd",
            "showDevDebugOutput": "parsed",
            "loadFiles": [],
            "swoConfig": {
                "enabled": false
            },
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "port": 0,
                        "type": "console"
                    }
                ]
            }
        }
    ]
}