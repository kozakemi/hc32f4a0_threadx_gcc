{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "create-build-dir",
                "cmake-configure",
                "make-build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "create-build-dir",
            "type": "shell",
            "windows": {
                "command": "cmd",
                "args": ["/c", "if not exist build mkdir build"]
            },
            "linux": {
                "command": "mkdir",
                "args": ["-p", "build"]
            },
            "osx": {
                "command": "mkdir",
                "args": ["-p", "build"]
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "args": [
                    "-G", "Ninja",
                    "-DCMAKE_BUILD_TYPE=Debug",
                    ".."
                ]
            },
            "linux": {
                "args": [
                    "-DCMAKE_BUILD_TYPE=Debug",
                    ".."
                ]
            },
            "osx": {
                "args": [
                    "-DCMAKE_BUILD_TYPE=Debug",
                    ".."
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "make-build",
            "type": "shell",
            "windows": {
                "command": "ninja"
            },
            "linux": {
                "command": "make",
                "args": ["-j16"]
            },
            "osx": {
                "command": "make",
                "args": ["-j16"]
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "ninja",
                "args": ["clean"]
            },
            "linux": {
                "command": "make",
                "args": ["clean"]
            },
            "osx": {
                "command": "make",
                "args": ["clean"]
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean",
                "build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "flash_with_pyocd",
            "type": "shell",
            "command": "./pyocd_flash.sh flash",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "start-rtt",
            "type": "shell",
            "command": "pyocd",
            "args": ["rtt", "--target", "hc32f4a0xi", "-M", "attach"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}